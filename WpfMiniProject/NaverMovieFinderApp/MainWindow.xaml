<mah:MetroWindow 
    x:Class="NaverMovieFinderApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:NaverMovieFinderApp"
    mc:Ignorable="d"
    Title="NaverMovieFinder" Height="450" Width="1024" Loaded="MetroWindow_Loaded" Closing="MetroWindow_Closing">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconpacks:PackIconForkAwesome Kind="YoutubeSquare" Margin="5, 7 ,0, 0" Foreground="White"/>
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <!--0-->
            <RowDefinition Height="70"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <!--4-->

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="683*"/>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="20"/>
            <!--3-->
        </Grid.ColumnDefinitions>
        <Image x:Name="ImgPoster" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Margin="10" Source="No_Picture.jpg"></Image>


        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="645">
            <TextBox x:Name="TxtMovieName" Width="515" Margin="10" FontSize="14"
                     InputMethod.PreferredImeState="On"
                     InputMethod.PreferredImeConversionMode="Native"
                     mah:TextBoxHelper.Watermark="검색할 영화명을 입력하세요"
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     mah:TextBoxHelper.ClearTextButton="True" KeyDown="TxtMovieName_KeyDown"/>
            <Button x:Name="BtnSearch" 
                    Width="100" Margin="5, 10" Content="검색" FontSize="14"
                    Background="ForestGreen" Foreground="White" Click="BtnSearch_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}"  Margin="10,0"/>
                            <iconpacks:PackIconForkAwesome Kind="Search" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>

        <DataGrid x:Name="GrdData" Grid.Row="2" Grid.Column="1" AutoGenerateColumns="True" Margin="10"
                  SelectionUnit="FullRow" ItemsSource="{Binding}" SelectedCellsChanged="GrdData_SelectedCellsChanged"
                  Style="{StaticResource MahApps.Styles.DataGrid.Azure}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="한글제목" IsReadOnly="True" FontWeight="Bold" />
                <DataGridTextColumn Binding="{Binding SubTitle}" Header="영어제목" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding PubDate}" Header="상영년도" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Director}" Header="감독" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Actor}" Header="배우" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding UserRating}" Header="평점" IsReadOnly="True" />

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button x:Name="BtnAddWatchList" Content="즐겨찾기추가" Margin="5, 10" Width="120" FontSize="12"
                    Background="DarkOrange" Foreground="White" Click="BtnAddWatchList_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}"  Margin="10,0"/>
                            <iconpacks:PackIconForkAwesome Kind="Plus" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button x:Name="BtnViewWatchList" Content="즐겨찾기보기" Margin="5, 10" Width="130" FontSize="12"
                    Background="DarkOliveGreen" Foreground="White" Click="BtnViewWatchList_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}"  Margin="10,0"/>
                            <iconpacks:PackIconFeatherIcons Kind="Eye" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button x:Name="BtnDeleteWatchList" 
                    Content="즐겨찾기삭제" Margin="5,10" Width="130" FontSize="12"
                    Background="YellowGreen" Foreground="White" Click="BtnDeleteWatchList_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}" Margin="10, 0" />
                            <iconpacks:PackIconForkAwesome Kind="Trash" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button x:Name="BtnWatchTrailer" Content="예고편보기" Margin="5, 10" Width="130" FontSize="12"
                    Background="Olive" Foreground="White" Click="BtnWatchTrailer_Click"  >
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}"  Margin="10,0"/>
                            <iconpacks:PackIconForkAwesome Kind="Search" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button x:Name="BtnNaverMovieLink" 
                    Content="네이버영화" Margin="5,10" Width="130" FontSize="12"
                    Background="SaddleBrown" Foreground="White" Click="BtnNaverMovieLink_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}" Margin="10, 0" />
                            <iconpacks:PackIconForkAwesome Kind="Link" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

        </StackPanel>

        <StatusBar Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4">
            <StatusBarItem Content="Naver &amp; Youtube OpenAPI App" />
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem x:Name="StsResult" />
        </StatusBar>
    </Grid>
</mah:MetroWindow>
